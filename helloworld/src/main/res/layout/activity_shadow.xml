<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shadow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.myAndroid.helloworld.activity.shadow.ShadowView
        android:layout_width="100dp"
        android:layout_height="400dp"
        shadow:bg_type="rect"
        shadow:sd_color="#DD000000"
        shadow:sd_dx="-4dp"
        shadow:sd_dy="4dp"
        shadow:bg_color="@color/color_448aff"
        shadow:sd_radius="8dp"
        shadow:src="@drawable/ic_launcher" />
</LinearLayout>
