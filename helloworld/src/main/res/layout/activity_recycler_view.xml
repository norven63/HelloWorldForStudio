<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.recyclerView.RecyclerViewActivity">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/radioGrid"
        android:gravity="left"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioLinerHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="linear-horizontal" />

        <RadioButton
            android:id="@+id/radioLinerVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="linear-vertical" />

        <RadioButton
            android:id="@+id/radioGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="grid" />

        <RadioButton
            android:id="@+id/radioStaggeredGridHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="staggeredGrid-horizontal" />

        <RadioButton
            android:id="@+id/radioStaggeredGridVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="staggeredGrid-vertical" />
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp" />

</LinearLayout>
