<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/moveView"
        android:layout_width="120dp"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:src="@drawable/test_image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.6"
        android:background="@color/gray"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/screen_width"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/screen_height"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/screen_width"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/moveView_left"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/screen_height"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/moveView_top"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/moveView_left"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/moveView_right"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/moveView_top"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/moveView_bottom"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/moveView_right"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</FrameLayout>