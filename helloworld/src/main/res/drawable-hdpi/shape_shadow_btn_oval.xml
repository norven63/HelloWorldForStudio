<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="7dp">
        <shape>
            <gradient
                android:centerX="0.5"
                android:centerY="0.5"
                android:gradientRadius="24dp"
                android:type="radial"
                android:endColor="#fafafa"
                android:startColor="#9C00FF" />
        </shape>
    </item>

    <item android:bottom="7dp">
        <shape
            android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="#9C00FF"
                android:startColor="#3253BD" />

        </shape>
    </item>
</layer-list>
